            <div class="fix"></div>
        </div>
        
        <div class="rowElem">
            <label>{% trans '' %}</label>
            <div class="formRight">
                <input type="text" name="config[]" value="{{ product.config. }}" placeholder=""/>
            </div>
            <div class="fix"></div>
        </div>
        
        <div class="rowElem">
            <label>{% trans '' %}</label>
            <div class="formRight">
                <input type="text" name="config[]" value="{{ product.config. }}" placeholder=""/>
            </div>
            <div class="fix"></div>
        </div>
        
        <div class="rowElem">
            <label>{% trans '' %}</label>
            <div class="formRight">
                <input type="text" name="config[]" value="{{ product.config. }}" placeholder=""/>
            </div>
